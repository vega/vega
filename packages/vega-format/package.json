{
  "name": "vega-format",
  "version": "1.0.2",
  "description": "JavaScript string formatting utilities for Vega.",
  "keywords": [
    "vega",
    "format",
    "number",
    "date",
    "time"
  ],
  "license": "BSD-3-Clause",
  "author": "Jeffrey Heer (http://idl.cs.washington.edu)",
  "source": "index.js",
  "main": "build/vega-format.js",
  "module": "build/vega-format.module.js",
  "unpkg": "build/vega-format.umd.js",
  "repository": "vega/vega",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "microbundle --globals d3-array=d3,d3-format=d3,d3-time-format=d3,vega-time=vega,vega-util=vega --name vega",
    "pretest": "yarn build",
    "test": "tape 'test/**/*-test.js'",
    "prepublishOnly": "yarn test && yarn build",
    "postpublish": "git push && git push --tags"
  },
  "dependencies": {
    "d3-array": "^2.5.1",
    "d3-format": "^1.4.4",
    "d3-time-format": "^2.2.3",
    "vega-time": "^2.0.2",
    "vega-util": "^1.15.0"
  }
}
