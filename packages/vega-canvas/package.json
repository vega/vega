{
  "name": "vega-canvas",
  "version": "1.2.3",
  "description": "Canvas and Image utilities.",
  "keywords": [
    "vega",
    "canvas",
    "image"
  ],
  "license": "BSD-3-Clause",
  "author": "Jeffrey Heer (http://idl.cs.washington.edu)",
  "source": "index.js",
  "main": "build/vega-canvas.node.js",
  "module": "build/vega-canvas.module.js",
  "unpkg": "build/vega-canvas.umd.js",
  "unpkg": "build/vega-canvas.umd.js",
  "repository": "vega/vega",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "yarn build:browser && yarn build:node",
    "build:browser": "microbundle --name vega -f modern,es,umd -i index.browser.js -o build/vega-canvas.js",
    "build:node": "microbundle --name vega --target node -f cjs -o build/vega-canvas.node.js",
    "pretest": "yarn build",
    "test": "tape 'test/**/*-test.js'",
    "prepublishOnly": "yarn test && yarn build",
    "postpublish": "git push && git push --tags"
  },
  "browser": {
    "./build/vega-canvas.node.js": "./build/vega-canvas.js",
    "./index.js": "./index.browser.js"
  }
}
