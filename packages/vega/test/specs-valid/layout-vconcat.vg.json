          "range": "height"
        },
        {
          "name": "size",
          "type": "linear",
          "round": true,
          "nice": false,
          "zero": true,
          "domain": {"data": "source", "field": "Acceleration"},
          "range": [4,361]
        }
      ],

      "axes": [
        {
          "scale": "x",
          "grid": true,
          "domain": false,
          "orient": "bottom",
          "tickCount": 5,
          "title": "Acceleration"
        },
        {
          "scale": "y",
          "grid": true,
          "domain": false,
          "orient": "left",
          "titlePadding": 5,
          "title": "Miles_per_Gallon"
        }
      ],

      "legends": [
        {
          "size": "size",
          "title": "Acceleration",
