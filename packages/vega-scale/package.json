{
  "name": "vega-scale",
  "version": "7.0.1",
  "description": "Scales and color schemes for visual encoding.",
  "keywords": [
    "vega",
    "scale",
    "color",
    "palette"
  ],
  "license": "BSD-3-Clause",
  "author": "Jeffrey Heer (http://idl.cs.washington.edu)",
  "source": "index.js",
  "main": "build/vega-scale.js",
  "module": "build/vega-scale.module.js",
  "unpkg": "build/vega-scale.umd.js",
  "repository": "vega/vega",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "microbundle --globals d3-array=d3,d3-interpolate=d3,d3-scale=d3,vega-time=vega,vega-util=vega --name vega",
    "pretest": "yarn build",
    "test": "tape 'test/**/*-test.js'",
    "prepublishOnly": "yarn test && yarn build",
    "postpublish": "git push && git push --tags"
  },
  "dependencies": {
    "d3-array": "^2.5.1",
    "d3-interpolate": "^1.4.0",
    "d3-scale": "^3.2.1",
    "vega-time": "^2.0.2",
    "vega-util": "^1.15.0"
  }
}
