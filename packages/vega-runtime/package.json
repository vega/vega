{
  "name": "vega-runtime",
  "version": "6.1.1",
  "description": "Runtime support for Vega dataflows.",
  "keywords": [
    "vega",
    "runtime",
    "dataflow",
    "reactive"
  ],
  "license": "BSD-3-Clause",
  "author": "Jeffrey Heer (http://idl.cs.washington.edu)",
  "source": "index.js",
  "main": "build/vega-runtime.js",
  "module": "build/vega-runtime.module.js",
  "unpkg": "build/vega-runtime.umd.js",
  "repository": "vega/vega",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "microbundle --globals vega-dataflow=vega,vega-util=vega --name vega",
    "pretest": "yarn build",
    "test": "tape 'test/**/*-test.js'",
    "prepublishOnly": "yarn test && yarn build",
    "postpublish": "git push && git push --tags"
  },
  "dependencies": {
    "vega-dataflow": "^5.7.1",
    "vega-util": "^1.15.0"
  },
  "devDependencies": {
    "vega-encode": "*",
    "vega-transforms": "*"
  }
}
