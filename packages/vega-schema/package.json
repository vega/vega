{
  "name": "vega-schema",
  "version": "5.14.0",
  "description": "Generate the Vega JSON schema.",
  "keywords": [
    "vega",
    "json",
    "schema"
  ],
  "license": "BSD-3-Clause",
  "author": "Jeffrey Heer (http://idl.cs.washington.edu)",
  "source": "index.js",
  "main": "build/vega-schema.js",
  "module": "build/vega-schema.module.js",
  "unpkg": "build/vega-schema.umd.js",
  "repository": "vega/vega",
  "scripts": {
    "prebuild": "rimraf build",
    "build": "microbundle --globals vega-scale=vega --name vega",
    "postbuild": "node schema > build/vega-schema.json",
    "test": "yarn build",
    "prepublishOnly": "yarn test",
    "postpublish": "git push && git push --tags"
  },
  "dependencies": {
    "vega-scale": "^7.0.1"
  },
  "devDependencies": {
    "vega-crossfilter": "*",
    "vega-encode": "*",
    "vega-force": "*",
    "vega-geo": "*",
    "vega-hierarchy": "*",
    "vega-label": "*",
    "vega-regression": "*",
    "vega-transforms": "*",
    "vega-view-transforms": "*",
    "vega-voronoi": "*",
    "vega-wordcloud": "*"
  }
}
