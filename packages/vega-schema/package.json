{
  "name": "@omni-co/vega-schema",
  "version": "6.2.0",
  "description": "Generate the Vega JSON schema.",
  "keywords": [
    "vega",
    "json",
    "schema"
  ],
  "license": "BSD-3-Clause",
  "type": "module",
  "author": {
    "name": "Vega",
    "url": "https://vega.github.io"
  },
  "exports": {
    "default": "./build/vega-schema.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/exploreomni/vega.git"
  },
  "scripts": {
    "prebuild": "del-cli build",
    "build": "rollup -c rollup.config.js --config-node",
    "postbuild": "node schema > build/vega-schema.json",
    "test": "npm run build",
    "prepublishOnly": "npm test"
  },
  "dependencies": {
    "@omni-co/vega-scale": "^8.1.0"
  },
  "devDependencies": {
    "@omni-co/vega-crossfilter": "*",
    "@omni-co/vega-encode": "*",
    "@omni-co/vega-force": "*",
    "@omni-co/vega-geo": "*",
    "@omni-co/vega-hierarchy": "*",
    "@omni-co/vega-label": "*",
    "@omni-co/vega-regression": "*",
    "@omni-co/vega-transforms": "*",
    "@omni-co/vega-view-transforms": "*",
    "@omni-co/vega-voronoi": "*",
    "@omni-co/vega-wordcloud": "*"
  }
