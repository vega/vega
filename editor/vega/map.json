{
  "width": 1920,
  "height": 1000,
  "viewport": [960, 500],
  "data": [
    {
      "name": "world",
      "url": "data/world-countries.json",
      "format": {"type": "json", "property": "features"} 
    }
  ],
  "marks": [
    {
      "type": "path",
      "from": {
        "data": "world",
