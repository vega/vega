{
  "$schema": "https://vega.github.io/schema/vega/v4.json",
  "autosize": "pad",
  "padding": 5,
  "width": 800,
  "height": 500,
  "style": "cell",
  "data": [
    {
      "name": "source_0",
      "url": "data/co2-concentration.csv",
      "format": {
        "type": "csv",
        "parse": {
          "Date": "utc:'%Y-%m-%d'"
        },
        "delimiter": ","
      },
      "transform": [
        {
          "type": "formula",
          "expr": "year(datum.Date)",
          "as": "year"
        },
        {
          "type": "formula",
          "expr": "floor(datum.year / 10) + 'x'",
          "as": "decade"
        },
        {
          "type": "formula",
          "expr": "(datum.year % 10) + (month(datum.Date)/12)",
          "as": "scaled_date"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_pathgroup",
      "type": "group",
      "from": {
        "facet": {
          "name": "faceted_path_layer_0_main",
          "data": "source_0",
          "groupby": [
            "decade"
          ]
        }
      },
      "encode": {
        "update": {
          "width": {
            "field": {
              "group": "width"
            }
          },
          "height": {
            "field": {
              "group": "height"
            }
          }
        }
      },
      "marks": [
        {
          "name": "layer_0_marks",
          "type": "line",
          "style": [
            "line"
          ],
          "sort": {
            "field": "datum.scaled_date",
            "order": "descending"
          },
          "from": {
            "data": "faceted_path_layer_0_main"
          },
          "encode": {
            "update": {
              "stroke": {
                "scale": "color",
                "field": "CO2"
              },
              "x": {
                "scale": "x",
                "field": "scaled_date"
              },
              "y": {
                "scale": "y",
                "field": "CO2"
              }
            }
          }
        }
      ]
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "from": {
        "data": "layer_0_pathgroup"
      },
      "encode": {
        "enter": {
          "fill": {
            "value": "black"
          },
          "text": {
            "field": "datum.decade"
          }
        }
      },
      "transform": [
        {
          "type": "label",
          "offset": 2,
          "anchor": [
            "right",
            "top-right",
            "bottom-right"
          ],
          "size": [
            800,
            500
          ],
          "padding": 20
        }
      ]
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "linear",
      "domain": {
        "fields": [
          {
            "data": "source_0",
            "field": "scaled_date"
          }
        ]
      },
      "range": [
        0,
        {
          "signal": "width"
        }
      ],
      "nice": true,
      "zero": false
    },
    {
      "name": "y",
      "type": "linear",
      "domain": {
        "fields": [
          {
            "data": "source_0",
            "field": "CO2"
          }
        ]
      },
      "range": [
        {
          "signal": "height"
        },
        0
      ],
      "zero": false,
      "nice": true
    },
    {
      "name": "color",
      "type": "sequential",
      "domain": {
        "data": "source_0",
        "field": "CO2",
        "sort": true
      },
      "range": {
        "scheme": "plasma"
      }
    }
  ],
  "axes": [
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Year into Decade",
      "tickCount": 11,
      "labelFlush": true,
      "labelOverlap": true,
      "zindex": 1
    },
    {
      "scale": "x",
      "orient": "bottom",
      "tickCount": 11,
      "gridScale": "y",
      "grid": true,
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "CO2 concentration in ppm",
      "labelOverlap": true,
      "tickCount": {
        "signal": "ceil(height/40)"
      },
      "zindex": 1
    },
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {
        "signal": "ceil(height/40)"
      },
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    }
  ],
  "config": {
    "axisY": {
      "minExtent": 30
    },
    "style": {
      "text": {
        "align": "left",
        "dx": 3,
        "dy": 1
      }
    }
  }
}